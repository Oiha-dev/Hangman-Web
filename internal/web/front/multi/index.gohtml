<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiplayer Hangman</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }

        iframe {
            border: none;
            width: 100%;
            height: 100%;
            display: block;
        }
    </style>
</head>
<body>
<iframe id="contentFrame"></iframe>
<script>
    const evtSource = new EventSource("/multi/sse");
    evtSource.onmessage = function(event) {
        const userCount = parseInt(event.data);
        const iframe = document.getElementById("contentFrame");
        if (userCount === 1) {
            iframe.src = "/static/multi/single_user.gohtml";
        } else {
            iframe.src = "/static/multi/multiple_users.gohtml";
            iframe.onload = function() {
                iframe.contentWindow.document.getElementById("userCount").innerText = userCount;
            };
        }
    };
</script>
</body>
</html>